<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:context=".ConfigActivity">

    <!-- Warrior CardView -->
    <androidx.cardview.widget.CardView
        android:tag="Warrior"
        android:id="@+id/cardViewWarrior"
        android:contentDescription="Warrior"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/warrior_image"
                android:contentDescription="Warrior" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warrior"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Mage CardView -->
    <androidx.cardview.widget.CardView
        android:tag="Mage"
        android:id="@+id/cardViewMage"
        android:contentDescription="Mage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp"
        android:layout_marginEnd="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/mage_image"
                android:contentDescription="Mage" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mage"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Rogue CardView -->
    <androidx.cardview.widget.CardView
        android:tag="Rogue"
        android:id="@+id/cardViewRogue"
        android:contentDescription="Rogue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@drawable/rogue_image"
                android:contentDescription="Rogue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rogue"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="20dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>